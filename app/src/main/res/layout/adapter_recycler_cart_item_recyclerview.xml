<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:translationZ="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/md_white_1000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginLeft="4dp"
                android:id="@+id/checkItemOrder"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2.4"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/rectangle_2"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Item name"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:textColor="@color/md_grey_800"
                        android:layout_marginRight="4dp"
                        android:textSize="14sp"
                        android:id="@+id/textViewItemNameXML"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:textColor="@color/md_grey_800"
                        android:layout_marginRight="4dp"
                        android:textSize="14sp"
                        android:text="Price"
                        android:padding="5dp"
                        android:id="@+id/textViewItemPriceXML"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Stock"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:textColor="@color/md_grey_800"
                        android:layout_marginRight="4dp"
                        android:textSize="14sp"
                        android:id="@+id/textViewItemStockXML"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:gravity="center"
                        android:src="@drawable/ic_add_item"
                        android:id="@+id/textViewItemQuantityIncreaseXML"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:paddingRight="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:text="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="4dp"
                        android:id="@+id/textViewItemQuantityXML"/>
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:gravity="center"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_remove_black_24dp"
                        android:id="@+id/textViewItemQuantityDecreaseXML"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/md_grey_800"
                    android:gravity="center"
                    android:id="@+id/totalAmountXML"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/placeOrderButtonXML"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:padding="4dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_edit_black_24dp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/deleteItemButtonXML"
                    android:src="@drawable/ic_delete_black_24dp"/>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>