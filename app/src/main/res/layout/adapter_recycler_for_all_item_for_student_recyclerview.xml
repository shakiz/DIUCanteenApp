<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        android:translationZ="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:id="@+id/foodItemIconXML"
                android:src="@drawable/ic_image_black_24dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:padding="4dp"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/md_grey_800"
                    android:padding="4dp"
                    android:id="@+id/foodItemItemNameXML"
                    android:text="Cheese and coffee"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".75"
                        android:textColor="@color/md_grey_800"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:id="@+id/foodItemPriceXML"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_money_black"
                        android:text="6"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".75"
                        android:textColor="@color/md_grey_800"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:id="@+id/foodItemStockXML"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_stock"
                        android:text="7"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textColor="@color/md_grey_800"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:id="@+id/foodItemCategoryXML"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_category"
                        android:drawablePadding="4dp"
                        android:text="@string/morning_snacks"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight=".2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:id="@+id/foodItemAddToCartXML"
                    android:src="@drawable/ic_add_shopping_cart_black_24dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>